<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="151dp"
        android:background="#9EFFFFFF"
        android:backgroundTint="#1BC8D8D6"
        android:orientation="vertical"
        android:paddingLeft="15dp">

        <TextView
            android:id="@+id/txtNumeroLance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="NÃºmero de Lance"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtCantidadFotos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Cantidad de fotos"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtPelicanos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Pelicanos"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtLobosMarinos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Lobos marinos"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>